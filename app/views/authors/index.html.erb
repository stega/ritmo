
<div id='authors' class='p-sm-3'>
  <p id="notice"><%= notice %></p>

  <div class='row head'>
    <div class='col-md-3 d-none d-sm-block'>AUTHOR</div>
    <div class='col-md-6 d-none d-sm-block'>AFFILIATION</div>
    <div class='col-md-3 d-none d-sm-block text-center'>INFO</div>
  </div>

  <% @authors.each do |author| %>
    <div class='row author'>
      <div class='col-md-3 text-center text-sm-start'><strong><%= author.name %></strong></div>
      <div class='col-md-6 text-center text-sm-start d-none d-sm-block'><%= author.affiliation %></div>
      <div class='col-md-3 text-center pt-sm-0 pt-2'>
        <%= link_to author do %>
          <i class="bi bi-person-circle"></i>
          view profile
        <% end %>
        <% if is_admin? %>
          <div class='mt-2'>
            <small>
              <%= link_to 'Edit', edit_author_path(author) %> :
              <%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' } %>
            </small>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class='mt-3 mb-3'><%= page_entries_info @authors %></div>
  <%= paginate @authors, window: 2 %>

  <% if is_admin? %>
    <div class='text-end mb-5 mt-5'>
      <%= link_to 'New Author', new_author_path, class:'btn-ritmo'%>
    </div>
  <% end %>

</div>

